<h4 class="ui center aligned medium icon header">
  <i class="circular inverted pink meh icon"></i>
  Friends
</h4>

<div class="ui two column grid">
    <div class="twelve wide column">
        <div class="ui fluid raised card chatbox">
            <div class="content">
                <div class="ui feed">
                    <%= render @messages %> 
                </div>
            </div>
            <div class="extra content">
                <form class="ui reply form">
                    <div class="field">
                        <div class="ui pink fluid icon input">
                            <input type="text" placeholder="Enter a message...">
                            <i class="bordered inverted pink edit icon"></i>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="four wide column">
        <div class="ui fluid raised card chatbox">
            <div class="content">
                <div class="ui top attached inverted pink vertical menu">
                  <a class="active item">
                    Home
                  </a>
                  <a class="item">
                    Messages
                  </a>
                  <a class="item">
                    Friends
                  </a>
                </div>
            </div>
        </div>
    </div>
</div>